{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "tcs_vlg:intro_fireworks",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/tcs/vlg/particles/firework"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.size_over_life = 1;v.random_location_x = math.random(-1, 1) * 4;v.random_location_z = math.random(-1, 1) * 4;"
			},
			"minecraft:emitter_rate_instant": {
				"num_particles": 80
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.21
			},
			"minecraft:emitter_shape_disc": {
				"radius": "0.1 * v.emitter_random_2 + math.floor(v.particle_random_2 * 3)*0.5",
				"plane_normal": ["v.emitter_random_1 * 2", "v.emitter_random_2", "v.emitter_random_4"],
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_initialization": {
				"per_update_expression": "v.size_over_life = 1 - (v.particle_age / v.particle_lifetime);"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 1.2
			},
			"minecraft:particle_initial_spin": {
				"rotation": -90
			},
			"minecraft:particle_initial_speed": 9,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.sin(v.particle_age * 90)", -1, "math.cos(v.particle_age * 40)"],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.2 * v.size_over_life) * v.particle_random_2", "(0.8 * v.size_over_life)  * v.particle_random_2"],
				"facing_camera_mode": "lookat_direction",
				"uv": {
					"texture_width": 64,
					"texture_height": 256,
					"flipbook": {
						"base_UV": ["math.floor(v.particle_random_1*2)*32", 0],
						"size_UV": [32, 32],
						"step_UV": [0, 32],
						"frames_per_second": 16,
						"max_frame": 9
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.emitter_random_1",
					"gradient": {
						"0.0": "#FFFF0000",
						"0.21": "#FFFFFB00",
						"0.49": "#FF00FF07",
						"0.75": "#FF009AFF",
						"1.0": "#FF6900FF"
					}
				}
			}
		}
	}
}