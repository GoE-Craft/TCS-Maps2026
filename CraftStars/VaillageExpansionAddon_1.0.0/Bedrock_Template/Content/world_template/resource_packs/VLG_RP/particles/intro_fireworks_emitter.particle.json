{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "tcs_vlg:intro_fireworks_emitter",
			"basic_render_parameters": {
				"material": "particles_add",
				"texture": "textures/tcs/vlg/particles/glow"
			}
		},
		"curves": {
			"variable.grow": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.2, 1, 0]
			}
		},
		"events": {
			"event": {
				"particle_effect": {
					"effect": "tcs_vlg:intro_fireworks",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.size_over_life = 1;v.random_location_x = math.random(-1, 1) * 4;v.random_location_z = math.random(-1, 1) * 4;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 8,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.21
			},
			"minecraft:emitter_shape_disc": {
				"offset": ["math.random(-8,8) * v.emitter_random_1", 3, "math.random(-10,-5.5) * v.emitter_random_4"],
				"radius": 3,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_initialization": {
				"per_update_expression": "v.size_over_life = 1 - (v.particle_age / v.particle_lifetime);"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.5
			},
			"minecraft:particle_lifetime_events": {
				"creation_event": ["event", "event1"]
			},
			"minecraft:particle_initial_speed": 0,
			"minecraft:particle_motion_dynamic": {},
			"minecraft:particle_appearance_billboard": {
				"size": ["2 * v.grow", "2 * v.grow"],
				"facing_camera_mode": "rotate_xyz"
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime + v.particle_random_1 / 2.0",
					"gradient": {
						"0.0": "#FFFFFFFF",
						"0.58": "#FFBB8330",
						"1.0": "#00481F00"
					}
				}
			}
		}
	}
}