{
  "format_version": "1.20.80",
  "minecraft:entity": {
    "description": {
      "identifier": "tcs_vlg:zombie_golem",
      "is_spawnable": true,
      "is_summonable": true,
      "properties": {
        "tcs_vlg:special_attack_count": {
          "type": "int",
          "default": 0,
          "range": [0, 4]
        },
        "tcs_vlg:delayed_death_triggered": {
          "type": "bool",
          "default": false
        }
      }
    },
    "component_groups": {
      "tcs_vlg:normal_attack": {
        "minecraft:mark_variant": { "value": 0 },
        "minecraft:movement.basic": {},
        "minecraft:movement": { "value": 0.22 },
        "minecraft:behavior.delayed_attack": {
          "priority": 1,
          "attack_duration": 2.1,
          "attack_once": false,
          "hit_delay_pct": 0.4,
          "reach_multiplier": 2.1,
          "require_complete_path": true,
          "track_target": true
        },
        "minecraft:attack": {
          "damage": 10
        },
        "minecraft:behavior.look_at_player": {
          "priority": 7,
          "look_distance": 6.0,
          "probability": 0.02
        },
        "minecraft:behavior.random_look_around": {
          "priority": 8
        },
        "minecraft:behavior.look_at_target": {
          "priority": 3,
          "look_distance": 8,
          "probability": 0.02,
          "angle_of_view_vertical": 360,
          "angle_of_view_horizontal": 360
        },
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "cause": "all",
              "deals_damage": "yes",
              "on_damage": { "event": "tcs_vlg:on_hurt" }
            }
          ]
        },
        "minecraft:collision_box": {
          "height": 4.2,
          "width": 2
        },
        "minecraft:behavior.random_stroll": {
          "xz_dist": 16,
          "y_dist": 3,
          "priority": 6
        }
      },
      "tcs_vlg:special_attack": {
        "minecraft:mark_variant": { "value": 1 },
        "minecraft:collision_box": {
          "height": 0,
          "width": 0
        },
        "minecraft:timer": {
          "time": 4.1668,
          "looping": false,
          "time_down_event": {
            "event": "tcs_vlg:switch_to_normal_attack",
            "target": "self"
          }
        },
        "minecraft:behavior.timer_flag_1": {
          "priority": 0,
          "cooldown_range": 3.0,
          "duration_range": [ 0.0, 0.0 ], 
          "on_end": {
            "event": "tcs_vlg:trigger_special_attack_effect",
            "target": "self"
          }
        },
        "minecraft:damage_sensor": {
          "triggers": [
            {
              "cause": "all",
              "deals_damage": false
            }
          ]
        }
      },
      "tcs_vlg:prepare_for_death": {
        "minecraft:mark_variant": { "value": 2 },
        "minecraft:collision_box": {
          "height": 0,
          "width": 0
        },
        "minecraft:timer": {
          "time": 1.2,
          "looping": false,
          "time_down_event": {
            "event": "tcs_vlg:despawn",
            "target": "self"
          }
        }
      },
      "tcs_vlg:despawn": {
        "minecraft:instant_despawn": {}
      },
      "tcs_vlg:delayed_death": {
        "minecraft:timer": {
          "time": 1,
          "looping": false,
          "time_down_event": {
            "event": "tcs_vlg:trigger_death",
            "target": "self"
          }
        }
      }
    },
    "components": {
      "minecraft:type_family": {
        "family": [ "monster", "mob", "zombie_golem" ]
      },
      "minecraft:mark_variant": { "value": 0 },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 30 : 0"
      },
      "minecraft:health": { "value": 80, "max": 80, "min": 1 },
      "minecraft:nameable": {},
      "minecraft:collision_box": {
        "height": 3.5,
        "width": 2
      },
      "minecraft:loot": {
        "table": "loot_tables/entities/zombie_golem.json"
      },
      "minecraft:persistent": {},
      "minecraft:physics": {},
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 6,
        "must_reach": true,
        "must_see": true,
        "reselect_targets": false,
        "entity_types": [
          {
            "filters": {
              "all_of": [
                {
                  "test": "is_family",
                  "subject": "other",
                  "value": "player"
                }
              ]
            },
            "within_default": 32
          }
        ]
      },
      "minecraft:follow_range": { "value": 48 },
      "minecraft:conditional_bandwidth_optimization": {},

      "minecraft:navigation.walk": {
        "can_path_over_water": false,
        "avoid_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:jump.static": {},
      "minecraft:can_climb": {},
      "minecraft:behavior.move_towards_target": {
        "priority": 2,
        "within_radius": 32
      },
      "minecraft:knockback_resistance": { "value": 1, "max": 1 },
      "minecraft:behavior.hurt_by_target": {
        "priority": 2,
        "entity_types": {
          "filters": {
            "test": "is_family",
            "subject": "other",
            "value": "player"
          }
        }
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "add": { "component_groups": ["tcs_vlg:normal_attack"] }
      },
      "tcs_vlg:on_hurt": {
        "sequence": [
          {
            "filters": {
              "any_of": [
                {
                  "all_of": [
                    { "test": "actor_health", "operator": "<", "value": 53 },
                    { "test": "int_property", "domain": "tcs_vlg:special_attack_count", "operator": "<", "value": 1 },
                    { "test": "actor_health", "operator": ">=", "value": 2 } 
                  ]
                },
                {
                  "all_of": [
                    { "test": "actor_health", "operator": "<", "value": 27 },
                    { "test": "int_property", "domain": "tcs_vlg:special_attack_count", "operator": "<", "value": 2 },
                    { "test": "actor_health", "operator": ">=", "value": 2 } 
                  ]
                }
              ]
            },
            "trigger": "tcs_vlg:switch_to_special_attack"
          },
          {
              "filters": {
                  "all_of": [
                    { "test": "actor_health", "operator": "<", "value": 2 } 
                  ] 
              },
              "trigger": "tcs_vlg:trigger_death"
          }
        ]
      },
      "tcs_vlg:switch_to_special_attack": {
        "set_property": { "tcs_vlg:special_attack_count": "q.property('tcs_vlg:special_attack_count') + 1" },
        "remove": { "component_groups": ["tcs_vlg:normal_attack"] },
        "add": { "component_groups": ["tcs_vlg:special_attack"] }
      },
      "tcs_vlg:trigger_special_attack_effect": {
        "queue_command": { "command": ["scriptevent tcs_vlg:mob_special_attack 0"] }
      },
      "tcs_vlg:switch_to_normal_attack": {
        "remove": { "component_groups": ["tcs_vlg:special_attack"] },
        "add": { "component_groups": ["tcs_vlg:normal_attack"] }
      },
      "tcs_vlg:trigger_death": {
        "remove": { "component_groups": ["tcs_vlg:normal_attack", "tcs_vlg:special_attack"] },
        "add": { "component_groups": ["tcs_vlg:prepare_for_death"] },
        "set_property":{ "tcs_vlg:delayed_death_triggered": true }
      },
      "tcs_vlg:despawn": {
        "add": { "component_groups": ["tcs_vlg:despawn"] }
      },
      "tcs_vlg:trigger_delayed_death": {
        "add": { "component_groups": ["tcs_vlg:delayed_death"] },
        "remove": { "component_groups": ["tcs_vlg:normal_attack", "tcs_vlg:special_attack"] }
      },
      "tcs_vlg:challenge": {
        "add": { "component_groups": ["tcs_vlg:normal_attack"] }
      }
    }
  }
}
